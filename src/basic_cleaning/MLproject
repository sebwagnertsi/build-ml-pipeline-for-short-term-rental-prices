name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Source of the data - fully qualified wandb name
        type: string
        default: sample.csv      
      output_artifact:
        description: The resulting artifact name
        type: string
        default: sample_cleaned.csv
      output_type: 
        description: The type of the output artifact
        type: string
        default: csv
      output_description:
        description: The description of our output artifact
        type: string
        default: The cleaned version of the input artifact
      min_price:
        type: float
        description: The minimum legitimate price
        default: 0
      max_price:
        type: float
        description: The maxmimum legitimate price
        default: 1000

    command: >-
        python run.py  --input_artifact {input_artifact} --output_artifact {output_artifact} --output_type {output_type} --output_description {output_description} --min_price {min_price} --max_price {max_price}
